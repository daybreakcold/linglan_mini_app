/* ============================================
   Markdown 渲染样式（用于 rich-text 组件）
   ============================================ */

/* 标题样式 */
.md-h1, .md-h2, .md-h3, .md-h4, .md-h5, .md-h6 {
  font-weight: bold;
  margin: 16rpx 0;
  color: #333333;
}
.md-h1 { font-size: 40rpx; }
.md-h2 { font-size: 36rpx; }
.md-h3 { font-size: 32rpx; }
.md-h4 { font-size: 30rpx; }
.md-h5 { font-size: 28rpx; }
.md-h6 { font-size: 26rpx; }

/* 段落样式 */
.md-p {
  margin: 8rpx 0;
  line-height: 1.6;
}

/* 列表样式 */
.md-list {
  margin: 8rpx 0;
  padding-left: 40rpx;
}

/* 引用样式 */
.md-blockquote {
  margin: 12rpx 0;
  padding: 12rpx 20rpx;
  border-left: 6rpx solid #1acad3;
  background-color: #f5f5f5;
  color: #666666;
}

/* 代码块样式 */
.md-code-block {
  margin: 12rpx 0;
  padding: 16rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-family: Consolas, Monaco, 'Courier New', monospace;
  font-size: 26rpx;
  overflow-x: auto;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 行内代码样式 */
.md-inline-code {
  padding: 4rpx 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  font-family: Consolas, Monaco, 'Courier New', monospace;
  font-size: 26rpx;
  color: #d63384;
}

/* 分隔线样式 */
.md-hr {
  margin: 20rpx 0;
  border: none;
  border-top: 2rpx solid #e5e5e5;
}
