/* pages/webview/webview.wxss */

/* 企业微信提示页样式 */
.wecom-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 48rpx;
  min-height: 100vh;
  background-color: #f5f6f8;
}

.wecom-icon {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #1989fa 0%, #07c160 100%);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.icon-text {
  font-size: 80rpx;
}

.wecom-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.wecom-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 44rpx;
}

/* 企业微信名片/二维码图片 */
.wecom-card-box {
  margin-top: 40rpx;
  width: 100%;
}

.wecom-card-image {
  width: 100%;
  border-radius: 24rpx;
  background-color: #fff;
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.08);
}

.wecom-card-tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
  display: block;
  text-align: center;
}

.wecom-link-box {
  margin-top: 48rpx;
  padding: 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.wecom-link {
  font-size: 24rpx;
  color: #1989fa;
  word-break: break-all;
  line-height: 36rpx;
}

.wecom-actions {
  margin-top: 40rpx;
  width: 100%;
  display: flex;
  gap: 24rpx;
}

.wecom-btn {
  flex: 1;
  height: 96rpx;
  background: linear-gradient(135deg, #1989fa 0%, #07c160 100%);
  border-radius: 48rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.wecom-btn-outline {
  background: #fff;
  color: #1989fa;
  border: 2rpx solid #1989fa;
}

.wecom-btn::after {
  border: none;
}

.wecom-tips {
  margin-top: 64rpx;
  padding: 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.tips-item {
  font-size: 26rpx;
  color: #666;
  line-height: 44rpx;
  display: block;
}
