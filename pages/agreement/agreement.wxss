/* pages/agreement/agreement.wxss */

.page {
  height: 100vh;
  background-color: #ffffff;
}

.content-scroll {
  height: 100%;
}

.content-wrapper {
  padding: 40rpx 32rpx;
  padding-bottom: calc(60rpx + env(safe-area-inset-bottom));
}

.agreement-content {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.8;
}

/* 主标题样式 */
.agreement-content h2 {
  font-size: 40rpx;
  font-weight: bold;
  color: #1c2b42;
  text-align: center;
  margin-bottom: 8rpx;
}

/* 英文标题 */
.agreement-content .en-title {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 48rpx;
  font-style: italic;
}

/* 章节标题样式 */
.agreement-content h3 {
  font-size: 32rpx;
  font-weight: bold;
  color: #1c2b42;
  margin-top: 40rpx;
  margin-bottom: 8rpx;
}

/* 英文章节标题 */
.agreement-content .en-section {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 20rpx;
  font-style: italic;
}

/* 中文段落样式 */
.agreement-content p {
  margin-bottom: 16rpx;
  text-align: justify;
}

/* 英文段落样式 */
.agreement-content .en-text {
  font-size: 26rpx;
  color: #888888;
  margin-bottom: 24rpx;
  font-style: italic;
}
