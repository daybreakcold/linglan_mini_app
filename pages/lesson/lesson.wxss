/* pages/lesson/lesson.wxss */

/* 非标准 margin 值 */
.mt-102 {
  margin-top: 204rpx;
}
.mt-103 {
  margin-top: 206rpx;
}
.mt-13 {
  margin-top: 26rpx;
}
.mt-25 {
  margin-top: 50rpx;
}

.page {
  background-color: #ffffff;
  width: 100%;
  min-height: 100vh;
  overflow-y: auto;
  overflow-x: hidden;
}

.group {
  padding-bottom: 36rpx;
}

/* 顶部 banner */
.banner-image {
  width: 100vw;
  height: 11.7333vw;
}

.group_2 {
  padding-left: 40rpx;
}

.text {
  color: #1c2b42;
  font-size: 48rpx;
  font-family: SourceHanSansCN;
  font-weight: 700;
  line-height: 46rpx;
}

/* 搜索栏 */
.section {
  margin-right: 40rpx;
  margin-top: 56rpx;
  padding: 20rpx 40rpx 24rpx;
  background-color: #c3c3c336;
  border-radius: 20rpx;
}

.search-icon {
  border-radius: 50%;
  opacity: 0.54;
  width: 54rpx;
  height: 54rpx;
  border: solid 6rpx #1c2b42;
}

.font {
  font-size: 28rpx;
  font-family: SourceHanSansCN;
  line-height: 26rpx;
  color: #c4c4c4;
}

.text_2 {
  margin-left: 24rpx;
  line-height: 26rpx;
  opacity: 0.54;
}

/* 标签区域 */
.group_4 {
  margin-top: 68rpx;
  margin-right: 40rpx;
}

.group_5 {
  padding-bottom: 16rpx;
}

.text_3 {
  color: #217aff;
  font-size: 32rpx;
  font-family: SourceHanSansCN;
  font-weight: 700;
  line-height: 30rpx;
}

.image_3 {
  width: 40rpx;
  height: 24rpx;
  transition: transform 0.3s ease;
}

.arrow-collapsed {
  transform: rotate(180deg);
}

.section_2 {
  margin-left: 14rpx;
  background-color: #2079ff;
  border-radius: 202rpx;
  width: 36rpx;
  height: 6rpx;
}

/* 二级标签 */
.group_6 {
  overflow-x: hidden;
}

.view {
  margin-top: 60rpx;
}

.secondary-tags-scroll {
  width: 100%;
  white-space: nowrap;
}

.secondary-tags-inner {
  display: inline-flex;
  flex-direction: row;
}

.font_2 {
  font-size: 28rpx;
  font-family: SourceHanSansCN;
  line-height: 26rpx;
  color: #ffffff;
}

.text-wrapper {
  padding: 16rpx 24rpx;
  background: rgba(153, 188, 240, 0.87);
  border-radius: 8rpx;
  min-width: 176rpx;
  height: 60rpx;
}

.text-wrapper.active {
  background: rgba(33, 122, 255, 0.87);
}

.text-wrapper_2 {
  padding: 16rpx 24rpx;
  background-color: #217affde;
  border-radius: 16rpx;
  min-width: 232rpx;
  height: 60rpx;
}

.text-wrapper_3 {
  padding: 16rpx 24rpx;
  background-color: #217affde;
  border-radius: 16rpx 0 0 16rpx;
  min-width: 148rpx;
  height: 60rpx;
}

/* 课程列表区域1 */
.view_2 {
  margin-top: 80rpx;
}

.section-header {
  margin-right: 40rpx;
}

.section-main-title {
  font-size: 32rpx;
  font-family: SourceHanSansCN;
  font-weight: 700;
  color: #1c2b42;
}

.section-title {
  font-size: 28rpx;
  color: #999999;
  margin-right: 8rpx;
}

.arrow-right {
  width: 10rpx;
  height: 18rpx;
}

.course-scroll {
  width: 100%;
  white-space: nowrap;
}

.course-list {
  display: inline-flex;
  flex-direction: row;
  padding-right: 40rpx;
}

.group_8 {
  flex-shrink: 0;
}

.horiz-list-item {
  padding: 8rpx 0;
  width: 240rpx;
}

/* 课程卡片封面 */
.section_3,
.section_4,
.section_5 {
  padding: 16rpx 20rpx;
  border-radius: 20rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  width: 240rpx;
  height: 280rpx;
}

.tag-badge {
  width: 61rpx;
  height: 26rpx;
}

.instructor-info {
  padding: 0 4rpx;
}

.instructor-avatar {
  border-radius: 50%;
  width: 38rpx;
  height: 38rpx;
}

.font_3 {
  font-size: 20rpx;
  font-family: SourceHanSansCN;
  line-height: 19rpx;
  color: #ffffff;
}

.font_4 {
  font-size: 28rpx;
  font-family: SourceHanSansCN;
  line-height: 26rpx;
  color: #1c2b42;
}

/* 科普文章列表区域 */
.view_3 {
  margin-top: 76rpx;
}

.article-list {
  display: inline-flex;
  flex-direction: row;
  padding-right: 40rpx;
}

.article-item {
  flex-shrink: 0;
  width: 306rpx;
}

.article-cover {
  border-radius: 20rpx 20rpx 0 0;
  width: 306rpx;
  height: 188rpx;
}

.article-info-bar {
  padding: 16rpx 20rpx;
  background-color: #1c2b4208;
  border-radius: 0 0 20rpx 20rpx;
  width: 306rpx;
}

.article-title {
  font-size: 28rpx;
  font-family: SourceHanSansCN;
  color: #1c2b42;
  line-height: 36rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.article-meta {
  margin-top: 12rpx;
}

.article-tag {
  font-size: 22rpx;
  color: #217aff;
  background-color: #217aff1a;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
}

.article-views {
  font-size: 22rpx;
  color: #999999;
}

/* 底部安全区域 */
.safe-bottom {
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
  padding-bottom: 120rpx;
}
