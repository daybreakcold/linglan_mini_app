<view class="flex-col page">
  <view class="flex-col group">
    <!-- 顶部背景区域 -->
    <view class="flex-col section">
      <!-- 状态栏占位 -->
      <view class="status-bar-placeholder"></view>
      <!-- 导航栏 -->
      <view class="mt-20 flex-row justify-center relative group_4">
        <image
          class="self-start image_6 pos_3"
          src="https://ide.code.fun/api/image?token=6933fbfb043f1900118f7710&name=057c73524377635eba89c832cdbba0b3.png"
          bindtap="onBack"
        />
        <text class="self-center text_2">开通会员</text>
        <view class="flex-col justify-start items-center group_5 pos">
          <image
            class="image_4"
            src="https://ide.code.fun/api/image?token=6933fbfb043f1900118f7710&name=9c30fb95de153781531626931fa93235.png"
          />
          <image
            class="image_5 pos_2"
            src="https://ide.code.fun/api/image?token=6933fbfb043f1900118f7710&name=9b4d0d258dfe1a7b352454bbf45840d5.png"
          />
        </view>
      </view>
    </view>

    <!-- 会员卡片和内容区域 -->
    <view class="flex-col relative group_6">
      <!-- 会员卡片 -->
      <view class="flex-col self-stretch relative section_2">
        <view class="flex-col">
          <!-- 用户信息 -->
          <view class="flex-row items-center">
            <view class="flex-col justify-start items-start relative group_7">
              <image
                class="image_7"
                src="{{userInfo.avatar || '/images/icons/avatar-user.svg'}}"
              />
              <image
                class="image_8 pos_5"
                src="https://ide.code.fun/api/image?token=6933fbfb043f1900118f7710&name=a307a646d8638627653dd7913b9045be.png"
              />
            </view>
            <view class="flex-col group_8 ml-5">
              <view class="flex-row items-center self-stretch group_9">
                <text class="font text_4">{{userInfo.nickname || '会员昵称'}}</text>
                <view class="flex-col justify-start items-end shrink-0 relative group_10">
                  <view class="flex-col justify-start items-center text-wrapper_2">
                    <text class="font_2 text_5">V{{membership.level || 3}}</text>
                  </view>
                  <image
                    class="image_9 pos_6"
                    src="https://ide.code.fun/api/image?token=6933fbfb043f1900118f7710&name=f3abebabcd103f8f40874504e6622e4d.png"
                  />
                </view>
                <view class="flex-col justify-start items-center shrink-0 text-wrapper_3">
                  <text class="text_6 text_7">年</text>
                </view>
              </view>
              <text class="self-start font_3 text_8 mt-13">{{membership.expireDate || '2025-12-12'}} 到期</text>
            </view>
          </view>

          <!-- 成长值进度条 -->
          <view class="flex-row items-end group_11 mt-17">
            <view class="flex-col justify-start flex-1 relative group_12">
              <view class="flex-row items-center">
                <view class="flex-col justify-start items-center shrink-0 text-wrapper_5">
                  <text class="font_2 text_5">V{{membership.level || 3}}</text>
                </view>
                <view class="flex-col justify-start items-start flex-1 section_4 ml-23">
                  <view class="divider" style="width: {{membership.progressPercent || 78}}%;"></view>
                </view>
              </view>
              <view class="section_3 pos_8"></view>
              <view class="flex-col justify-start items-center text-wrapper_4 pos_7">
                <text class="font_2 text_5 text_9">{{membership.growthValue || 2728}}</text>
              </view>
            </view>
            <view class="ml-4 flex-row shrink-0 group_13">
              <view class="flex-col justify-start items-center shrink-0 self-start text-wrapper_6">
                <text class="font_2 text_6 text_11">V{{(membership.level || 3) + 1}}</text>
              </view>
              <text class="self-center font_3 text_6 text_10 ml-9">成长值 {{membership.growthValue || 2728}}/{{membership.nextLevelValue || 3500}}</text>
            </view>
          </view>
        </view>

        <!-- 卡号和续费按钮 -->
        <view class="flex-row justify-between items-start group_14">
          <text class="font_4 text_12">NO.{{membership.cardNo || '1278 3987 2979 0789'}}</text>
          <view class="flex-col justify-start items-center text-wrapper_7" bindtap="onRenew">
            <text class="font_5 text_5 text_13">立即续费</text>
          </view>
        </view>

        <!-- 会员等级标签 -->
        <view class="flex-col justify-start text-wrapper pos_4">
          <text class="font text_3">{{membership.levelName || '黄金VIP会员'}}</text>
        </view>
      </view>

      <!-- 套餐选择区域 - 敬请期待 -->
      <view class="flex-col justify-start items-center self-stretch coming-soon-section">
        <text class="coming-soon-text">会员套餐</text>
        <text class="coming-soon-sub">敬请期待</text>
      </view>

