/* 页面容器 */
.page {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding-bottom: calc(env(safe-area-inset-bottom) + 180rpx);
}

/* 状态栏占位 */
.status-bar {
  height: calc(env(safe-area-inset-top, 44px));
  background-color: #fff;
}

/* 导航栏 */
.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 96rpx;
  padding: 0 32rpx;
  background-color: #fff;
  box-shadow: 0 4rpx 4rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 10;
}

.navbar-left,
.navbar-right {
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
}

.navbar-title {
  font-family: 'Noto Sans SC', sans-serif;
  font-weight: 700;
  font-size: 38rpx;
  color: #2a2a2a;
  letter-spacing: -0.95rpx;
}

/* 深色背景区域 */
.dark-header {
  background: linear-gradient(130.55deg, #120d00 36.73%, #2a110c 100%);
  padding: 32rpx;
  min-height: 320rpx;
}

/* 用户信息区域 */
.user-section {
  padding: 20rpx 0;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.avatar-wrapper {
  position: relative;
  width: 96rpx;
  height: 96rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(202, 196, 208, 0.5);
}

.avatar-badge {
  position: absolute;
  right: -4rpx;
  bottom: -4rpx;
  width: 36rpx;
  height: 36rpx;
  background-color: #119c59;
  border-radius: 50%;
  border: 1.6rpx solid #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.crown-icon {
  width: 24rpx;
  height: 24rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.user-name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.user-name {
  font-family: 'Roboto', 'Noto Sans JP', sans-serif;
  font-weight: 500;
  font-size: 32rpx;
  color: #fffffe;
  line-height: 48rpx;
}

.vip-badge {
  background-color: #119c59;
  padding: 4rpx 12rpx;
  border-radius: 40rpx;
}

.vip-text {
  font-family: 'Inter', sans-serif;
  font-weight: 700;
  font-size: 24rpx;
  color: #fff;
  line-height: 32rpx;
}

.expire-text {
  font-family: 'Roboto', 'Noto Sans JP', 'Noto Sans SC', sans-serif;
  font-weight: 400;
  font-size: 28rpx;
  color: #fffffe;
  line-height: 40rpx;
}

/* 积分进度条 */
.progress-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 24rpx;
}

.level-badge {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 30520000rpx;
  min-width: 48rpx;
  text-align: center;
}

.level-text {
  font-family: 'Inter', sans-serif;
  font-weight: 400;
  font-size: 20rpx;
  color: #fff;
  line-height: 30rpx;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 30520000rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #fff;
  border-radius: 30520000rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-family: 'Inter', 'Noto Sans JP', 'Noto Sans SC', sans-serif;
  font-weight: 400;
  font-size: 20rpx;
  color: #fff;
  line-height: 30rpx;
  margin-left: 8rpx;
}

/* 卡号和续费 */
.card-info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 24rpx;
}

.card-no {
  font-family: 'Inter', sans-serif;
  font-weight: 400;
  font-size: 22rpx;
  color: #fff;
  line-height: 33rpx;
}

.renew-btn {
  background-color: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 30520000rpx;
  padding: 8rpx 24rpx;
}

.renew-text {
  font-family: 'Inter', 'Noto Sans JP', 'Noto Sans SC', sans-serif;
  font-weight: 400;
  font-size: 24rpx;
  color: #fff;
  line-height: 32rpx;
}

/* 套餐选择区域 */
.plans-section {
  padding: 32rpx 24rpx;
  margin-top: -40rpx;
  position: relative;
  z-index: 5;
}

.plans-container {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.plan-card {
  flex: 1;
  background-color: #fff;
  border: 3.6rpx solid #f3f3f3;
  border-radius: 20rpx;
  padding: 60rpx 20rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  min-height: 378rpx;
}

.plan-card.plan-selected {
  border-color: #119c59;
  border-width: 3.6rpx;
}

.plan-tag {
  position: absolute;
  top: -12rpx;
  right: 0;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.tag-discount {
  background-color: #119c59;
}

.tag-recommend {
  background-color: #119c59;
}

.tag-text {
  font-family: 'HarmonyOS Sans SC', sans-serif;
  font-size: 20rpx;
  color: #fff;
  line-height: 30rpx;
}

.plan-name {
  font-family: 'HarmonyOS Sans SC', sans-serif;
  font-size: 32rpx;
  color: #1e2939;
  line-height: 32rpx;
  margin-bottom: 40rpx;
}

.plan-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 12rpx;
}

.price-symbol {
  font-family: 'HarmonyOS Sans SC', sans-serif;
  font-size: 40rpx;
  color: #000;
  letter-spacing: -0.9rpx;
}

.plan-selected .price-symbol {
  color: #119c59;
}

.price-amount {
  font-family: 'HarmonyOS Sans SC', sans-serif;
  font-size: 80rpx;
  color: #000;
  letter-spacing: -0.9rpx;
  line-height: 1;
}

.plan-selected .price-amount {
  color: #119c59;
}

.price-original {
  font-family: 'Inter', sans-serif;
  font-weight: 400;
  font-size: 20rpx;
  color: #99a1af;
  line-height: 30rpx;
  text-decoration: line-through;
  margin-bottom: 12rpx;
}

.plan-desc {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2rpx;
}

.plan-desc text {
  font-family: 'Inter', 'Noto Sans JP', 'Noto Sans SC', sans-serif;
  font-weight: 400;
  font-size: 18rpx;
  color: #99a1af;
  line-height: 22.5rpx;
}

/* 立即开通按钮 */
.subscribe-section {
  padding: 0 32rpx;
  margin-top: 8rpx;
}

.subscribe-btn {
  background-color: #119c59;
  border: 2rpx solid rgba(202, 196, 208, 0.5);
  border-radius: 30rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.subscribe-btn:active {
  opacity: 0.85;
}

.subscribe-text {
  font-family: 'Inter', 'Noto Sans JP', sans-serif;
  font-weight: 700;
  font-size: 28rpx;
  color: #fff;
  line-height: 42rpx;
}

/* 会员协议 */
.agreement-section {
  padding: 32rpx 24rpx;
  margin-top: 24rpx;
}

.agreement-text {
  font-family: 'Roboto', 'Noto Sans JP', 'Noto Sans SC', 'Noto Sans KR', sans-serif;
  font-weight: 500;
  font-size: 24rpx;
  color: #999;
  line-height: 32rpx;
}
