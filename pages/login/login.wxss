/* pages/login/login.wxss */

.page {
  position: relative;
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f7ff 0%, #ffffff 50%, #f8fffe 100%);
  overflow: hidden;
}

/* 背景装饰圆圈 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  pointer-events: none;
}

.circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.6;
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  background: linear-gradient(135deg, #e8f4fd 0%, #d4ecfb 100%);
  top: -100rpx;
  right: -100rpx;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #e6f7ed 0%, #d0f0dc 100%);
  top: 200rpx;
  left: -150rpx;
}

.circle-3 {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #fff3e6 0%, #ffe8cc 100%);
  bottom: 300rpx;
  right: -50rpx;
}

/* 主内容区 */
.content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 60rpx;
  padding-top: 180rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* Logo 区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo-wrapper {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #217aff 0%, #4a9fff 100%);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 60rpx -20rpx rgba(33, 122, 255, 0.5);
  margin-bottom: 40rpx;
}

.logo-icon {
  font-size: 80rpx;
}

.app-name {
  font-size: 56rpx;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: 4rpx;
  margin-bottom: 16rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 2rpx;
}

/* 头像昵称填写区域 */
.profile-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  width: 100%;
}

.avatar-btn {
  width: 160rpx;
  height: 160rpx;
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  position: relative;
}

.avatar-btn::after {
  display: none;
}

.avatar-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #e8e8e8;
  background: #f5f5f5;
}

.avatar-edit-icon {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 48rpx;
  height: 48rpx;
  background: #217aff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #ffffff;
}

.edit-icon-text {
  font-size: 24rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999999;
  margin-top: 16rpx;
  margin-bottom: 32rpx;
}

.nickname-wrapper {
  width: 100%;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 0 32rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
}

.nickname-input {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  color: #333333;
  text-align: center;
}

.nickname-input::placeholder {
  color: #cccccc;
}

/* 登录区域 */
.login-section {
  width: 100%;
}

/* 微信登录按钮 */
.wechat-login-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  border-radius: 50rpx;
  box-shadow: 0 16rpx 40rpx -10rpx rgba(7, 193, 96, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.wechat-login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 20rpx -5rpx rgba(7, 193, 96, 0.4);
}

.wechat-login-btn.disabled {
  opacity: 0.7;
  transform: none;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 16rpx;
}

.login-btn-text {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

/* 加载动画 */
.loading-spinner {
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #ffffff;
  border-radius: 50%;
  margin-right: 16rpx;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 分隔线 */
.divider {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 60rpx 0;
}

.divider-line {
  width: 80rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #e0e0e0, transparent);
}

.divider-text {
  font-size: 24rpx;
  color: #cccccc;
  margin: 0 24rpx;
  letter-spacing: 2rpx;
}

/* 特性说明 */
.features {
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding: 0 20rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.feature-text {
  font-size: 24rpx;
  color: #999999;
}

/* 底部协议 */
.agreement-section {
  position: absolute;
  bottom: 80rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 40rpx;
}

.checkbox-wrapper {
  margin-right: 12rpx;
  flex-shrink: 0;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #cccccc;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.checkbox.checked {
  background: linear-gradient(135deg, #217aff 0%, #4a9fff 100%);
  border-color: #217aff;
}

.checkbox-icon {
  font-size: 20rpx;
  color: #ffffff;
  font-weight: bold;
}

.agreement-text-wrapper {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.agreement-text {
  font-size: 24rpx;
  color: #999999;
}

.agreement-link {
  font-size: 24rpx;
  color: #217aff;
}
