/* 底部评论输入栏 */
.section_3 {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ffffff;
  box-shadow: 0rpx -2rpx 16rpx #00000008;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}
.comment-input {
  flex: 1;
  height: 68rpx;
  background-color: #f5f5f5;
  border-radius: 34rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}
.send-btn {
  margin-left: 20rpx;
  padding: 16rpx 32rpx;
  background-color: #217aff;
  border-radius: 34rpx;
  color: #ffffff;
  font-size: 28rpx;
}
.send-btn-disabled {
  background-color: #cccccc;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}
.loading-text {
  font-size: 28rpx;
  color: #999999;
}
