.section-header {
  margin-bottom: 24rpx;
}
.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1c2b42;
}

/* 评论列表 */
.comment-list {
  max-height: 600rpx;
  overflow-y: auto;
}
.comment-item {
  display: flex;
  flex-direction: row;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.comment-item:last-child {
  border-bottom: none;
}
.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}
.comment-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.comment-author {
  font-size: 24rpx;
  color: #1c2b42;
  font-weight: 500;
  margin-bottom: 8rpx;
}
.comment-text {
  font-size: 26rpx;
  color: #333333;
  line-height: 40rpx;
  margin-bottom: 8rpx;
}
.comment-time {
  font-size: 20rpx;
  color: #999999;
}
.empty-comments {
  padding: 40rpx 0;
  text-align: center;
}
.empty-text {
  font-size: 24rpx;
  color: #999999;
}

.divider {
  margin-top: 60rpx;
  background-color: #1c2b4203;
  height: 2rpx;
