/* ==================== 新样式（参考 inquiry-chat，适配 TAB 页面）==================== */

.page {
  height: 100vh;
  background-color: #f5f6f8;
}

/* 状态栏占位 */
.status-bar-placeholder {
  width: 100%;
  height: env(safe-area-inset-top, 44px);
}

/* 顶部固定区域 */
.header-fixed {
  flex-shrink: 0;
  background-color: #f5f6f8;
}

/* 标题文字 */
.title-text {
  margin-left: 44rpx;
  color: #1c2b42;
  font-size: 48rpx;
  font-family: SourceHanSansCN;
  font-weight: 700;
  line-height: 45.02rpx;
}

/* 消息列表区域 - 高度通过 JS 动态计算 */
.message-list {
  /* flex: 1; */
  padding: 24rpx;
  box-sizing: border-box;
  /* 高度通过 JS 动态计算并设置在 style 中 */
}

/* 加载历史提示 */
.loading-more,
.history-tip {
  text-align: center;
  padding: 20rpx 0;
}

.loading-text,
.history-tip-text {
  font-size: 24rpx;
  color: #999999;
}

/* 快捷问题 */
.quick-questions {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.quick-title {
  font-size: 28rpx;
  color: #666666;
  display: block;
  margin-bottom: 20rpx;
}

.quick-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.quick-item {
  background: linear-gradient(135deg, #e8f4fc 0%, #d9edfc 100%);
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
}

.quick-text {
  font-size: 26rpx;
  color: #3683a2;
}

/* 消息列表 */
.messages {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.message-item {
  display: flex;
  align-items: flex-start;
}

.message-item.user {
  flex-direction: row-reverse;
  margin-right: 32rpx;
}

.avatar-wrap {
  flex-shrink: 0;
  width: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
}

.message-content {
  max-width: calc(100% - 100rpx);
  margin: 0 16rpx;
}

.message-item.user .message-content {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.message-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.message-header.user-header {
  flex-direction: row-reverse;
}

.message-name {
  font-size: 24rpx;
  color: #666666;
}

.message-time {
  font-size: 22rpx;
  color: #999999;
}

.message-bubble {
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  max-width: calc(100vw - 180rpx);
  box-sizing: border-box;
  overflow: hidden;
}

.assistant-bubble {
  background-color: #ffffff;
  border-top-left-radius: 4rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.user-bubble {
  background: linear-gradient(135deg, #3683a2 0%, #2980b9 100%);
  border-top-right-radius: 4rpx;
  border-top-left-radius: 20rpx;
}

.user-bubble .message-text {
  color: #ffffff;
}

.message-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 正在输入提示 */
.typing-indicator {
  display: flex;
  align-items: flex-start;
}

.typing-bubble {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  border-top-left-radius: 4rpx;
  padding: 24rpx 32rpx;
  margin-left: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.typing-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #999999;
  border-radius: 50%;
  animation: typing 1.4s infinite ease-in-out both;
}

.typing-dot:nth-child(1) {
  animation-delay: 0s;
}

.typing-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%, 80%, 100% {
    transform: scale(0.6);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

.message-bottom {
  height: 40rpx;
}

/* 底部输入区域 - TAB页面需要定位在 tabBar 上方 */
.input-area {
  position: fixed;
  left: 0;
  right: 0;
  /* TAB页面：定位在 tabBar 上方 */
  bottom: calc(env(safe-area-inset-bottom) + 100rpx);
  background-color: #ffffff;
  border-top: 1rpx solid #f0f0f0;
  padding: 16rpx 24rpx;
  z-index: 100;
}

.input-wrap {
  display: flex;
  align-items: center;
  background-color: #f5f6f8;
  border-radius: 40rpx;
  padding: 8rpx 8rpx 8rpx 28rpx;
}

.input {
  flex: 1;
  height: 72rpx;
  font-size: 28rpx;
  color: #333333;
}

.input-placeholder {
  color: #999999;
}

.send-btn {
  flex-shrink: 0;
  background-color: #cccccc;
  border-radius: 32rpx;
  padding: 16rpx 32rpx;
  transition: background-color 0.3s;
}

.send-btn.active {
  background: linear-gradient(135deg, #3683a2 0%, #2980b9 100%);
}

.send-text {
  font-size: 28rpx;
  color: #ffffff;
}

/* Markdown 样式 */
.md-content {
  display: block;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  line-height: 1.6;
}

/* 用户消息文字颜色 */
.user-text {
  color: #ffffff;
}
