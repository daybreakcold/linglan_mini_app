/* 课程轮播 Swiper */
.course-swiper {
  width: 100%;
  height: 320rpx;
  margin-top: 20rpx;
}

.course-card {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 4rpx 0;
}

/* 轮播指示点 */
.swiper-dots {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.swiper-dots .dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
  transition: all 0.3s;
}

.swiper-dots .dot.active {
  width: 24rpx;
  border-radius: 6rpx;
  background-color: #3683a2;
}

.course-item {
  display: flex;
  flex-direction: column;
  margin-top: 24rpx;
  position: relative;
}

.lesson-tag {
  font-size: 22rpx;
