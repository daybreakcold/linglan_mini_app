/* pages/article-list/article-list.wxss */

.page {
  background-color: #ffffff;
  min-height: 100vh;
  width: 100%;
  overflow-y: auto;
  overflow-x: hidden;
}

/* 顶部背景装饰 */
.header-bg {
  width: 100vw;
  height: 88rpx;
  background: linear-gradient(180deg, #f5f7fa 0%, #ffffff 100%);
}

/* 主内容区 */
.content {
  margin-top: 24rpx;
  padding: 0 40rpx;
}

/* 标题栏 */
.title-bar {
  padding: 0 0 24rpx;
}

.back-icon {
  width: 24rpx;
  height: 42rpx;
}

.pos {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.title-text {
  color: #1c2b42;
  font-size: 36rpx;
  font-weight: 500;
  line-height: 34rpx;
}

.pos_2 {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.search-icon {
  width: 38rpx;
  height: 38rpx;
  opacity: 0.6;
}

.more-icon {
  width: 42rpx;
  height: 42rpx;
}

/* 标签筛选栏 */
.tag-section {
  margin-top: 20rpx;
}

.tag-bar {
  padding-bottom: 16rpx;
}

.tag-item {
  font-size: 28rpx;
  line-height: 26rpx;
  color: #c4c4c4;
  transition: all 0.2s;
}

.tag-active {
  color: #217aff;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 30rpx;
}

.expand-icon {
  width: 40rpx;
  height: 24rpx;
}

.tag-indicator {
  background-color: #2079ff;
  border-radius: 202rpx;
  width: 36rpx;
  height: 6rpx;
  transition: margin-left 0.3s ease;
}

/* 文章列表 */
.article-list {
  margin-top: 38rpx;
  padding-bottom: 40rpx;
}

.article-card {
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.article-cover {
  width: 670rpx;
  height: 320rpx;
  border-radius: 20rpx 20rpx 0 0;
}

.article-info {
  padding: 24rpx 32rpx;
  background-color: rgba(27, 43, 66, 0.03);
}

.author-avatar {
  border-radius: 50%;
  width: 76rpx;
  height: 76rpx;
  flex-shrink: 0;
}

.article-meta {
  flex: 1;
  overflow: hidden;
}

.article-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1c2b42;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.article-summary {
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
  margin-top: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.action-btn {
  padding: 10rpx;
}

.like-icon {
  width: 32rpx;
  height: 34rpx;
}

.favorite-icon {
  width: 34rpx;
  height: 30rpx;
}

.count-text {
  font-size: 24rpx;
  color: #999999;
}

/* 加载状态 */
.loading-wrap {
  padding: 100rpx 0;
  text-align: center;
  color: #999999;
  font-size: 28rpx;
}

.loading-more,
.no-more,
.empty {
  padding: 40rpx 0;
  text-align: center;
  color: #999999;
  font-size: 26rpx;
}

.empty {
  padding: 100rpx 0;
}

/* 底部安全区域 */
.safe-bottom {
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
  padding-bottom: 20rpx;
}
