/* pages/course/course.wxss */
/* 健康科普列表页样式 */

.page {
  background-color: #ffffff;
  min-height: 100vh;
  width: 100%;
  overflow-y: auto;
  overflow-x: hidden;
}

/* 顶部背景装饰 */
.header-bg {
  width: 100vw;
  height: 88rpx;
  background: linear-gradient(180deg, #f0f4f8 0%, #ffffff 100%);
}

/* 主内容区 */
.content {
  margin-top: 0;
  padding: 24rpx 40rpx 0;
}

/* 标题栏 */
.title-bar {
  padding: 0 0 24rpx;
}

.back-icon {
  width: 24rpx;
  height: 42rpx;
}

.pos {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.title-text {
  color: #1c2b42;
  font-size: 36rpx;
  font-family: SourceHanSansCN;
  font-weight: 500;
  line-height: 34rpx;
}

.pos_2 {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.search-icon {
  width: 30rpx;
  height: 38rpx;
  opacity: 0;
}

.more-icon {
  width: 42rpx;
  height: 42rpx;
}

/* 标签筛选栏 */
.tag-section {
  margin-top: 0;
}

.tag-bar {
  padding-bottom: 16rpx;
}

.tag-item-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tag-item {
  font-size: 28rpx;
  font-family: SourceHanSansCN;
  line-height: 26rpx;
  color: #c4c4c4;
  transition: all 0.2s;
  padding-bottom: 12rpx;
}

.tag-active {
  color: #217aff;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 30rpx;
}

.expand-icon {
  width: 40rpx;
  height: 24rpx;
}

.tag-indicator {
  background-color: transparent;
  border-radius: 202rpx;
  width: 36rpx;
  height: 6rpx;
  transition: background-color 0.2s ease;
}

.indicator-active {
  background-color: #2079ff;
}

/* 文章列表 */
.article-list {
  margin-top: 38rpx;
  padding-bottom: 40rpx;
}

.article-card {
  border-radius: 20rpx;
  overflow: hidden;
}

.article-cover {
  width: 670rpx;
  height: 320rpx;
  border-radius: 20rpx 20rpx 0 0;
  background-color: #f5f5f5;
}

.article-info {
  padding: 24rpx 32rpx;
  background-color: rgba(27, 43, 66, 0.03);
}

.article-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1c2b42;
  line-height: 44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.article-summary {
  font-size: 26rpx;
  color: #666666;
  line-height: 38rpx;
  margin-top: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-meta {
  margin-top: 20rpx;
}

.article-tag {
  font-size: 24rpx;
  color: #217aff;
  background-color: rgba(33, 122, 255, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.like-icon {
  width: 28rpx;
  height: 28rpx;
}

.view-icon {
  width: 28rpx;
  height: 28rpx;
}

.count-text {
  font-size: 24rpx;
  color: #999999;
  margin-left: 8rpx;
}

/* 加载状态 */
.loading-wrap {
  padding: 100rpx 0;
  text-align: center;
  color: #999999;
  font-size: 28rpx;
}

.loading-more,
.no-more,
.empty {
  padding: 40rpx 0;
  text-align: center;
  color: #999999;
  font-size: 26rpx;
}

.empty {
  padding: 100rpx 0;
}

/* 底部安全区域 */
.safe-bottom {
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
  padding-bottom: 40rpx;
}
